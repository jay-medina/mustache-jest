{
  "name": "mustache-jest",
  "version": "1.0.0",
  "description": "Jest Transformer to compile mustache templates",
  "main": "index.js",
  "scripts": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrfunkycold/mustache-jest.git"
  },
  "keywords": ["Jest", "Mustache", "Hogan", "TypeScript"],
  "author": "josemedina921@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrfunkycold/mustache-jest/issues"
  },
  "homepage": "https://github.com/mrfunkycold/mustache-jest#readme",
  "dependencies": {
    "@types/jest": "^22.1.0",
    "hogan.js": "^3.0.2",
    "jest": "^22.1.4",
    "npm-run-all": "^4.1.2",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.html?$": "<rootDir>/transformer/mustacheTransformer.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "html"]
  }
}
